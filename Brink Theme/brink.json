{
	"json_version": 0.3,
	"data": {
		"name": "Brink",
		"author": "Valerio Lyndon",
		"css": "https://valeriolyndon.github.io/MAL-Public-List-Designs/Brink%20Theme/Brink.min.css",
		"type": "modern",
		"help": "https://myanimelist.net/forum/?topicid=1772180",
		"sponsor": "https://ko-fi.com/valeriolyndon",
		"columns": {
			"mode": "greylist",
			"animelist": {
				"Image": true,
				"Score": true,
				"Episodes": true
			},
			"mangalist": {
				"Image": true,
				"Score": true,
				"Chapters": true
			}
		},
		"preview": {
			"columns": {
			"mode": "greylist",
				"animelist": {
					"Image": true,
					"Score": true,
					"Episodes": true,
					"Tags": true,
					"Numbers": true
				},
				"mangalist": {
					"Image": true,
					"Score": true,
					"Chapters": true,
					"Tags": true,
					"Numbers": true
				}
			}
		},
		"options": {
			"--toggleStats": {
				"name": "List Statistics",
				"description": "Enables list statistics being shown in the footer.",
				"type": "toggle",
				"replacements": [["--toggleStats: hidden;", "--toggleStats: hidden;", "--toggleStats: visible;"]]
			},
			"--toggleStreaming": {
				"name": "Watch Button",
				"description": "Enables the \"Watch\" button with streaming services watch options.",
				"type": "toggle",
				"replacements": [["--toggleStreaming: visible;", "--toggleStreaming: hidden;", "--toggleStreaming: visible;"]],
				"default": true
			},
			"--imageBrightness": {
				"name": "Cover Image Brightness",
				"type": "range",
				"min": 0,
				"max": 100,
				"replacements": [["--imageBrightness: 66%;", "--imageBrightness: {{{insert}}}%;"]],
				"default": 66
			},
			"--imagebrightnessHov": {
				"name": "Cover Image Brightness (hover state)",
				"type": "range",
				"min": 0,
				"max": 100,
				"replacements": [["--imageBrightnessHov: 35%;", "--imageBrightnessHov: {{{insert}}}%;"]]
			},
			"--imageBlurHov": {
				"name": "Image blur amount (while hovered).",
				"type": "range",
				"min": 0,
				"max": 20,
				"step": 0.01,
				"replacements": [["--imageBlurHov: 2px;", "--imageBlurHov: {{{insert}}}px;"]],
				"default": 2
			},
			"--infoBGOpacity": {
				"name": "Opacity of title/information background.",
				"type": "range",
				"min": 0,
				"max": 100,
				"replacements": [["--infoBGOpacity: 85%;", "--infoBGOpacity: {{{insert}}}%;"]],
				"default": 85
			},
			"--bgDimness": {
				"name": "Background Dimming",
				"type": "range",
				"min": 0,
				"max": 100,
				"replacements": [["--bgDimness: 50%;", "--bgDimness: {{{insert}}}%;"]],
				"default": 50
			},
			"--bannerVignetteOpacity": {
				"name": "Banner Vignette Opacity",
				"type": "range",
				"min": 0,
				"max": 100,
				"replacements": [["--bannerVignetteOpacity: 90%;", "--bannerVignetteOpacity: {{{insert}}}%;"]],
				"default": 90
			},
			"--toggleTopRatedGold": {
				"name": "Top Rated - Gold for 10★",
				"type": "toggle",
				"replacements": [["--toggleTopRatingGold: visible;", "--toggleTopRatingGold: hidden;", "--toggleTopRatingGold: visible;"]],
				"default": true
			},
			"--toggleTopRatedSilver": {
				"name": "Top Rated - Silver for 9★",
				"type": "toggle",
				"replacements": [["--toggleTopRatingSilver: visible;", "--toggleTopRatingSilver: hidden;", "--toggleTopRatingSilver: visible;"]],
				"default": true
			},
			"--toggleTopRatedBronze": {
				"name": "Top Rated - Bronze for 8★",
				"type": "toggle",
				"replacements": [["--toggleTopRatingBronze: hidden;", "--toggleTopRatingBronze: hidden;", "--toggleTopRatingBronze: visible;"]]
			}
		},
		"mods": {
			"hd-images": {
				"name": "High-resolution Cover Images",
				"description": "If you want higher resolution images, this should do it. [b]Will increase page load times[/b].",
				"css": {"import": "@\\import \"https://malscraper.azurewebsites.net/covers/all/anime/presets/dataimagelink\";\n@\\import \"https://malscraper.azurewebsites.net/covers/all/manga/presets/dataimagelink\";"},
				"options": {
					"username": {
						"name": "Your MyAnimeList Username",
						"description": "Must be entered exactly as it appears on MyAnimeList. This is not required, but will reduce the impact on page loads slightly.",
						"type": "text",
						"replacements": [
							["all/anime/presets", "anime/{{{insert}}}/presets"],
							["all/manga/presets", "manga/{{{insert}}}/presets"]
						]
					}
				},
				"tags": ["imagery"]
			},
			"light": {
				"name": "Light Theme",
				"description": "Who turned the lights on?",
				"css": {"bottom": "https://valeriolyndon.github.io/MAL-Public-List-Designs/Brink%20Theme/modThemeLight.min.css"},
				"options": {
					"dynamic": {
						"name": "Dynamic Mode",
						"description": "With this enabled, the list will automatically switch between light and dark modes depending on the visitor preference.",
						"type": "toggle",
						"replacements": [
							[":root", ":root", "@media (prefers-color-scheme: light) {:root"],
							["RegExp/$", "", "}"]
						]
					}
				},
				"tags": ["visual style"]
			},
			"cat-info": {
				"name": "Category-Coloured Title Backgrounds",
