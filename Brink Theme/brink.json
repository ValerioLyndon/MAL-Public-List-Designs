					},
					"--silverRating": {
						"name": "Top Rated 9★",
						"type": "text/value",
						"replacements": [["--silverRating: 0, 0%, 80%;", "--silverRating: {{{insert}}};"]],
						"default": "0, 0%, 80%"
					},
					"--bronzeRating": {
						"name": "Top Rated 8★",
						"type": "text/value",
						"replacements": [["--bronzeRating: 23, 40%, 48%;", "--bronzeRating: {{{insert}}};"]],
