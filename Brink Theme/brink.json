					},
					"6b": {
						"name": "Planned Background",
						"type": "text/image_url",
						"replacements": [["RegExp/(:6[\\s\\S\\n]*?--background-image: )url\\(URLHERE\\);", "$1{{{insert}}};"]]
					},
					"6c": {
						"name": "Planned Banner",
						"type": "text/image_url",
						"replacements": [["RegExp/(:6[\\s\\S\\n]*?--banner-image: )url\\(URLHERE\\);", "$1{{{insert}}};"]]
					}
				},
				"tags": ["per-category options", "imagery"]
			},
			"banner-height": {
				"name": "Change Banner Height",
				"css": {"botton":"https://valeriolyndon.github.io/MAL-Public-List-Designs/Brink%20Theme/modBannerHeight.css"},
				"options": {
					"height": {
						"name": "Height",
						"description": "Height is based on the screen's width. Value is a decimal representation of a percentage, i.e 0.3 is 30% of the page width. Give it a slide to see how it looks!",
						"type": "range",
						"min": 0,
						"max": 1,
						"step": 0.001,
						"replacements": [["--banner-height: 0.3","--banner-height: {{{insert}}}"]],
						"default": 0.3
					}
				},
				"tags": ["proportions"]
			},
			"favourite-tag": {
				"name": "Favourite Tags",
				"description": "This mod will add a Heart icon on entries with a the tag \"Favourite\".",
				"requires": ["tag-overflow"],
				"css": {"botton":"https://valeriolyndon.github.io/MAL-Public-List-Designs/Brink%20Theme/modFavouriteTags.css"},
				"options": {
					"tag": {
						"name": "Tag to Target",
						"description": "Want to apply this mod to a tag other than \"Favourite\"? Input your tag here. Tag must be in [URL format](https://github.com/ValerioLyndon/MAL-Public-List-Designs/wiki/Add-your-own-coloured-tags.#getting-the-tag-in-url-format).",
						"type": "text",
						"replacements": [["Favourite","{{{insert}}}"]],
						"default": "Favourite"
					},
					"icon": {
						"name": "Icon to Display",
						"description": "You can also change the heart icon here.",
						"type": "text/content",
						"replacements": [["\"\\f004\"","{{{insert}}}"]]
					}
				},
				"conflicts": ["tag-scores-dedicated"],
				"tags": ["functionality"]
			},
			"hide-tag": {
				"name": "Hide Hentai Covers",
				"description": "This mod will darken and blur [i](if supported by your browser)[/i] any covers with the tag \"Hentai\".",
				"requires": ["tag-overflow"],
				"css": {"botton":"https://valeriolyndon.github.io/MAL-Public-List-Designs/Brink%20Theme/modHideHentaiCovers.min.css"},
				"options": {
					"tag": {
						"name": "Tag to Target",
						"description": "Want to apply this mod to a tag other than \"Hentai\"? Input your tag here. Tag must be in [URL format](https://github.com/ValerioLyndon/MAL-Public-List-Designs/wiki/Add-your-own-coloured-tags.#getting-the-tag-in-url-format).",
						"type": "text",
						"replacements": [["Hentai","{{{insert}}}"]],
						"default": "Hentai"
					},
					"text": {
						"name": "Text to Display",
						"description": "You can also change the \"Explicit Content\" text here.",
						"type": "text/content",
						"replacements": [["\"EXPLICIT CONTENT\"","{{{insert}}}"]],
						"default": "EXPLICIT CONTENT"
					}
				},
				"conflicts": ["tag-scores-dedicated"],
				"tags": ["functionality"]
			},
			"tag-scores-dedicated": {
				"name": "Tag Scores",
				"description": "This is a [b]compelete override[/b] of the score and tag columns and will completely replace the score on your list with a tag. Your tag score must be the first tag, and any other tags on your list will be invisible.",
				"css": {"botton":"https://valeriolyndon.github.io/MAL-Public-List-Designs/Brink%20Theme/modTagScoresDedicated.css"},
				"conflicts": ["hide-tag", "favourite-tag"],
				"tags": ["functionality"]
			},
			"theme": {
				"name": "Custom Theme Colours",
				"description": "Create your own theme by replacing all the theme colours as you desire. Colours are HSL values with their surrounding parentheses removed.",
				"css": {"bottom": "/*------------------------------*\\\n|*     Custom Theme Colours     *|\n\\* - - - - - - - - - - - - - - -*/\n\n:root {\n\t--bg: 240, 3%, 9%;\n\t--bgAlt: 240, 3%, 14%;\n\t--btn: 240, 3%, 16%;\n\t--btnAlt: 240, 3.5%, 21%;\n\t--btnLight: 240, 100%, 94%, 4%;\n\t--btnAccent: 240, 17%, 34%;\n\t--accent: 240, 75%, 77%;\n\t\n\t--text: 0, 0%, 100%;\n\t--textProminent: 27, 87%, 67%;\n\t--textLinkHov: 240, 50%, 80%;\n\t\n\t--current: 35, 49%, 46%;\n\t--completed: 324, 49%, 46%;\n\t--paused: 80, 91%, 23%;\n\t--dropped: 6, 44%, 46%;\n\t--planned: 56, 18%, 56%;\n\t\n\t--goldRating: 31, 100%, 70%;\n\t--silverRating: 0, 0%, 80%;\n\t--bronzeRating: 23, 40%, 48%;\n}"},
				"options": {
					"--bg": {
						"name": "Background",
						"type": "text/value",
						"replacements": [["--bg: 240, 3%, 9%;", "--bg: {{{insert}}};"]],
						"default": "240, 3%, 9%"
					},
					"--bgAlt": {
						"name": "Alternate Background",
						"type": "text/value",
						"replacements": [["--bgAlt: 240, 3%, 14%;", "--bgAlt: {{{insert}}};"]],
						"default": "240, 3%, 14%"
					},
					"--btn": {
						"name": "Button Backing",
						"type": "text/value",
						"replacements": [["--btn: 240, 3%, 16%;", "--btn: {{{insert}}};"]],
						"default": "240, 3%, 16%"
					},
					"--btnAlt": {
						"name": "\"Swap To\" Button Backing",
						"type": "text/value",
						"replacements": [["--btnAlt: 240, 3.5%, 21%;", "--btnAlt: {{{insert}}};"]],
						"default": "240, 3.5%, 21%"
					},
					"--btnLight": {
						"name": "Button Accent",
						"type": "text/value",
						"replacements": [["--btnLight: 240, 100%, 94%, 4%;", "--btnLight: {{{insert}}};"]],
						"default": "240, 100%, 94%, 4%"
					},
					"--btnAccent": {
						"name": "Button Border",
						"type": "text/value",
						"replacements": [["--btnAccent: 240, 17%, 34%;", "--btnAccent: {{{insert}}};"]],
						"default": "240, 17%, 34%"
					},
					"--accent": {
						"name": "Accent Colour",
						"type": "text/value",
						"replacements": [["--accent: 240, 75%, 77%;", "--accent: {{{insert}}};"]],
						"default": "240, 75%, 77%"
					},
					"--text": {
						"name": "Text",
						"type": "text/value",
						"replacements": [["--text: 0, 0%, 100%;", "--text: {{{insert}}};"]],
						"default": "0, 0%, 100%"
					},
					"--textProminent": {
						"name": "Content Status Text",
						"description": "Re-watching/airing/etc texts.",
						"type": "text/value",
						"replacements": [["--textProminent: 27, 87%, 67%;", "--textProminent: {{{insert}}};"]],
						"default": "27, 87%, 67%"
					},
					"--textLinkHov": {
						"name": "Link Text",
						"type": "text/value",
						"replacements": [["--textLinkHov: 240, 50%, 80%;", "--textLinkHov: {{{insert}}};"]],
						"default": "240, 50%, 80%"
					},
					"--current": {
						"name": "Category - Current",
						"type": "text/value",
						"replacements": [["--current: 35, 49%, 46%;", "--current: {{{insert}}};"]],
						"default": "35, 49%, 46%"
					},
					"--completed": {
						"name": "Category - Completed",
						"type": "text/value",
						"replacements": [["--completed: 324, 49%, 46%;", "--completed: {{{insert}}};"]],
						"default": "324, 49%, 46%"
					},
					"--paused": {
						"name": "Category - Paused",
